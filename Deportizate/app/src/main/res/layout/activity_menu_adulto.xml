<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Adultos.MenuAdultos"
    android:background="@drawable/fondoejercicio">
    >
    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/CalentamientoButton"
        android:background="@drawable/calentamientofuego" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/EstiramientoButton"
        android:background="@drawable/estiramiento"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/CalentamientoButton"
        android:layout_toEndOf="@+id/CalentamientoButton" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="200dp"
        android:id="@+id/EjerciciosButton"
        android:background="@drawable/ejercicios"
        android:layout_below="@+id/CalentamientoButton"
        android:layout_alignParentLeft="false"
        android:layout_alignParentStart="true" />

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/RutinasButton"
        android:background="@drawable/rutina"
        android:layout_below="@+id/EjerciciosButton" />
</RelativeLayout>
