<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context=".Activities.MainActivity"
    android:background="@drawable/fondocalentamiento">

    <TableRow
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/imageButtonAbout">

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/BotonMenuJovenes"
            android:layout_gravity="center"
            android:background="@drawable/joven"
            android:layout_alignParentLeft="true"
            android:layout_alignParentTop="true"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/BotonMenuAdultos"
            android:layout_gravity="center"
            android:background="@drawable/adulta"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/BotonMenuJovenes"
            android:layout_toEndOf="@+id/BotonMenuJovenes"
            android:layout_weight="1"
            android:scaleType="fitXY"/>

        <ImageButton
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/BotonMenuAdultosMayores"
            android:layout_gravity="center"
            android:background="@drawable/senor"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/BotonMenuAdultos"
            android:layout_toEndOf="@+id/BotonMenuAdultos"
            android:layout_weight="1"
            android:scaleType="fitXY"
            />
    </TableRow>

    <ImageButton
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageButtonAbout"
        android:background="@drawable/logosold" />
</RelativeLayout>
